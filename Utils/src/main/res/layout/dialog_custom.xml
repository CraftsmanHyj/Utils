<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:minWidth="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cusLlContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_btn_top"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/cusTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="消息提示"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cusTvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoLink="all"
            android:gravity="center"
            android:text="提示消息"
            android:textColor="#333333"
            android:textColorLink="@color/hyperlink"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cusLlBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/line_size"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cusBtnNegative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/line_size"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_left"
            android:gravity="center"
            android:maxLines="1"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cusBtnPositive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_right"
            android:gravity="center"
            android:maxLines="1"
            android:text="确定"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>